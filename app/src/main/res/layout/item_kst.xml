<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:radius="16dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvMatkulNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Mata Kuliah"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMatkulKode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode: IF101"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvMatkulSks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKS: 3"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvMatkulSemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester: 1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Tambahan Jadwal -->
            <TextView
                android:id="@+id/tvMatkulJadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal: Senin, 08:00 - 09:40"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Tambahan Dosen -->
            <TextView
                android:id="@+id/tvMatkulDosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosen: Nama Dosen"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
